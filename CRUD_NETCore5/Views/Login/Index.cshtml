
@{
    ViewData["Title"] = "Login";
}

<div class="mx-auto bg-white rounded-3" style="width: 30em;">
    <div class="text-center">
        <img src="~/img/aerhnic-logo.png" class="" alt="logo" />
    </div>
    
    <form class="login-form">
        <hr />
        <h2 class="form-text text-center">Para ingresar al sistema, porfavor inserte sus datos</h2>
        <div class="mb-3 pt-3">
            <label for="userName" class="form-label">Nombre de Usuario</label>
            <input type="email" class="form-control form-input rounded-pill" id="userInput" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="userPassword" class="form-label">Contraseña</label>
            <input type="password" class="form-control form-input rounded-pill" id="userPassword">
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary mb-3">Ingresar</button>
        </div>
    </form>
</div>


<environment names="Development">
    <link rel="stylesheet" href="~/css/customStyles.css" />
</environment>